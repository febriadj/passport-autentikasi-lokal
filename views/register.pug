doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    
    link(rel="stylesheet", href="auth.css")
    title Auth - Register
  body 
    #auth 
      #auth-wrap
        form(action="/register", method="post")
          - if ( message != undefined ) {
              p.message #{ message }
          - }
          input(type="text", name="username" placeholder="Enter your username" class="form-control" required)
          input(type="email", name="email" placeholder="Enter your email" class="form-control" required)
          input(type="password", name="password" placeholder="Enter your password" class="form-control" required)
          input(type="password", name="confirmPassword" placeholder="Enter your password again" class="form-control" required)
          button(type="submit" class="form-control") Register
          .ask
            p Sudah Punya Akun?
            a(href="/login") Login