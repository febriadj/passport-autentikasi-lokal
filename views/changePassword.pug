doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    link(rel="stylesheet", href="changePassword.css")
    title Change Password
  body 
    #change 
      #change-wrap 
        form(action="/change", method="post")
          - if (message != undefined) {
              p.message #{ message }
          - }
          input(type="password", name="password" class="form-control" placeholder="Enter your new password")
          input(type="password", name="confirmPassword" class="form-control" placeholder="Enter your new password again")
          button(type="submit" class="form-control") Change Password 